<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/orangutan2"
    tools:context=".Vista2Activity"
    tools:ignore="ExtraText">

    <!-- Fondo negro semitransparente --><![CDATA[
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.3" />


    ]]>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="259dp"
        android:layout_height="104dp"
        android:layout_margin="16dp"
        android:background="#80000000"
        android:text="Una característica notable de los orangutanes es su largo pelaje rojizo, que les da un aspecto inconfundible. ¿Te gustaría saber más sobre estos fascinantes primates?"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.229"
        tools:ignore="HardcodedText,MissingConstraints,TextSizeCheck"
        tools:layout_editor_absoluteX="15dp" />

    <TextView
        android:id="@+id/detailTextView"
        android:layout_width="173dp"
        android:layout_height="68dp"
        android:layout_margin="16dp"
        android:background="#80000000"
        android:text="A cerca del orangutan"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.084"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.054"
        tools:ignore="HardcodedText,MissingConstraints,TextSizeCheck" /> <!-- Fondo negro semitransparente -->
    app:layout_constraintBottom_toTopOf="@+id/textView5"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
